.content-music {
    width: 510rpx;
    height: 510rpx;
    border: 4rpx solid #eee;
    border-radius: 100%;
    padding: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.content-music button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.content-music image {
    border-radius: 100%;
    width: 490rpx;
    height: 490rpx;
}

.music-img {
    animation: roate 10s infinite linear;
}

@-webkit-keyframes roate {
    0% {
        transform: rotateZ(0);
    }

    100% {
        transform: rotateZ(360deg);
    }
}

@keyframes roate {
    0% {
        transform: rotateZ(0);
    }

    100% {
        transform: rotateZ(360deg);
    }
}

